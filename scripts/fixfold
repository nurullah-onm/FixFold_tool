#!/usr/bin/env bash
set -euo pipefail

# Wrapper to launch FixFold terminal men√º
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
ROOT_DIR="$(cd "$SCRIPT_DIR/.." && pwd)"

# Vars: allow override via env
API_HOST=${API_HOST:-$(hostname -I | awk '{print $1}')}
API_PORT=${API_PORT:-4000}
export API_URL=${API_URL:-"http://${API_HOST}:${API_PORT}/api/health"}

exec "$SCRIPT_DIR/menu.sh"
